                    android:layout_marginRight="0dp" />

                <freed.cam.ui.themesample.settings.childs.SettingsChildMenu
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemMatrixChooser"
                    app:Description="@string/setting_matrixchooser_description"
