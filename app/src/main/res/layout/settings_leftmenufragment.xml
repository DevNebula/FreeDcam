                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideoProfile"
                    app:Description="@string/setting_videoprofile_description"
                    app:HeaderText="@string/setting_videoprofile_header"
                    app:ValueText="1080p"
                    android:layout_marginBottom="1dp"
