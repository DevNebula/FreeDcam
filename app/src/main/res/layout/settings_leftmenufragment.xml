                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" />

                <freed.cam.ui.themesample.settings.childs.SettingsChildMenu
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemOpCode"
                    app:Description="@string/setting_opcode_description"
                    app:HeaderText="@string/setting_opcode_header"
                    app:ValueText="80"
                    android:layout_marginBottom="1dp"
