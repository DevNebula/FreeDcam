                    android:id="@+id/MenuItem_VideoProfileEditor" />

                <freed.cam.ui.themesample.settings.childs.SettingsChildMenuVideoHDR
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideHDR"
                    app:Description="@string/setting_videohdr_description"
                    app:HeaderText="@string/setting_videohdr_header"
