                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemVideoSize"
                    app:Description=""
                    app:HeaderText="VideoSize:"
                    app:ValueText=""
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0dp" />

                <freed.cam.ui.themesample.settings.childs.SettingsChildMenu
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MenuItemPreviewSize"
                    app:Description=""
                    app:HeaderText="PreviewSize:"
                    app:ValueText=""
