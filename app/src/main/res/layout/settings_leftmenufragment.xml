                    app:ValueText=""
                    android:layout_marginBottom="1dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/timelapse_frames"
                    android:id="@+id/textView14"
                    android:textColor="@color/menu_header_color"
                    android:background="@color/settingsmenuBackColor" />

                <freed.cam.ui.themesample.settings.childs.SettingsChildMenuimeLapseFrames
