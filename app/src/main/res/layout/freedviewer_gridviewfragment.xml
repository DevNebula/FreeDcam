<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/freedviewer_gridview_base" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/freedviewer_topbar_height"
        android:background="#50000000">

        <ImageButton
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size"
            android:id="@+id/button_goback"
            android:background="@drawable/back_button_press"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/files_selected"
                android:id="@+id/textView_filesSelected"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/freedviewer_screenslide_topBarItemMargine" />

            <Button
            android:layout_width="50dp"
            android:layout_height="@dimen/app_icon_size"
            android:text="@string/ALL"
            android:id="@+id/button_filetype"
            android:textSize="18dp"
            android:layout_marginRight="@dimen/freedviewer_screenslide_topBarItemMargine"
            android:background="#00000000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stack"
                android:id="@+id/button_stack"
                android:background="#00000000" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_icon_size"
            android:text="RAWTODNG"
            android:id="@+id/button_rawToDng"
            android:textSize="18dp"
            android:layout_marginRight="@dimen/freedviewer_screenslide_topBarItemMargine"
            android:background="#00000000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <Button
            android:layout_width="@dimen/freedviewer_topbar_height"
            android:layout_height="@dimen/freedviewer_topbar_height"
            android:id="@+id/button_deltePics"
            android:background="@drawable/delte_button_pressed"
            android:layout_marginRight="@dimen/freedviewer_screenslide_topBarItemMargine"
            android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>